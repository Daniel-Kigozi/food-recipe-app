<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(@recipe), local: true, class: "custom-form" do |f| %>
        <div class="form-group">
          <%= f.label :food_id, "Select Food", class: "form-label" %>
          <%= f.collection_select :food_id, @foods, :id, :name, { prompt: true }, class: "form-control custom-select" %>
        </div>
        <div class="form-group">
          <%= f.label :quantity, "Quantity", class: "form-label" %>
          <%= f.number_field :quantity, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Price", class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <%= f.text_field :price, class: "form-control" %>
          </div>
        </div>
        <%= f.hidden_field :recipe_id, value: @recipe.id %>
        <%= f.submit "Add Ingredient", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>