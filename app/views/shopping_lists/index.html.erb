<a href="<%= recipes_path %>" class="btn btn-primary ml-5">Back to Recipes List</a>
<div class="container mt-2">
  <div class="row">
    <div class="col">
      <div class="alert alert-info">
        Amount of food items to buy: <%= @total_foods %>
      </div>

      <% @recipe_foods.each do |recipe_food| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= recipe_food.food.name %></h5>
            <p class="card-text"><%= recipe_food.quantity %><%= recipe_food.food.measurement_unit %></p>
            <p class="card-text"><strong>$<%= (recipe_food.food.price * recipe_food.quantity.to_d).round(2) %></strong></p>
          </div>
        </div>
      <% end %>
      <div class="alert alert-info">
        Total value of food needed: $<%= @total_price %>
      </div>
    </div>
  </div>
</div>
